{
  "buildCommand": "cd Frontend/frontend && npm ci && npm run build",
  "outputDirectory": "Frontend/frontend/dist",
  "framework": null,
  "functions": {
    "api/index.py": {
      "runtime": "python3.12",
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/api/:path*", "destination": "/api/index.py" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
